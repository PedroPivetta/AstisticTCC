@model Final.Models.Users

@{
    ViewData["Title"] = "Cadastro";
}

<form method="post" asp-action="Cadastrar">
    <div class="main-login">
        <div class="left-login">
            <img src="~/images/SVG/Cadastro.gif" class="left-login-image" alt="Austimo Animação">
        </div>
        <div class="right-login">
            <div class="card-login">
                <h1>Cadastrar-se</h1>
                <div class="textfield">
                    <label asp-for="Name">Usuário</label>
                    <input asp-for="Name" name="name" type="text" maxlength="50">
                    @if (TempData["NullName"] != null)
                    {
                        <div class="d-flex">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-exclamation-diamond-fill alert-color alert-message" viewBox="0 0 16 16">
                                    <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                                </svg>
                            </div>

                            <div class="alert-color">
                                @TempData["NullName"]
                            </div>
                        </div>
                    }
                    else if (TempData["RegisterName"] != null)
                    {
                        <div class="d-flex">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-exclamation-diamond-fill alert-color alert-message" viewBox="0 0 16 16">
                                    <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                                </svg>
                            </div>

                            <div class="alert-color">
                                @TempData["RegisterName"]
                            </div>
                        </div>
                    }
                </div>
                <div class="textfield">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" name="email" type="email" maxlength="50" >
                    @if (TempData["NullEmail"] != null)
                    {
                        <div class="d-flex">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-exclamation-diamond-fill alert-color alert-message" viewBox="0 0 16 16">
                                    <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                                </svg>
                            </div>

                            <div class="alert-color">
                                @TempData["NullEmail"]
                            </div>
                        </div>
                    }
                    else if (TempData["EmailRegister"] != null)
                    {
                        <div class="d-flex">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-exclamation-diamond-fill alert-color alert-message" viewBox="0 0 16 16">
                                    <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                                </svg>
                            </div>

                            <div class="alert-color">
                                @TempData["EmailRegister"]
                            </div>
                        </div>
                    }
                </div>
                <div class="textfield">
                    <label asp-for="Password">Senha</label>
                    <input asp-for="Password" name="password" type="password"  maxlength="20">
                    @if (TempData["NullPassword"] != null)
                    {
                        <div class="d-flex">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-exclamation-diamond-fill alert-color alert-message" viewBox="0 0 16 16">
                                    <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                                </svg>
                            </div>

                            <div class="alert-color">
                                @TempData["NullPassword"]
                            </div>
                        </div>
                    }
                    else if (TempData["Minimum"] != null)
                    {
                        <div class="d-flex">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-exclamation-diamond-fill alert-color alert-message" viewBox="0 0 16 16">
                                    <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                                </svg>
                            </div>

                            <div class="alert-color">
                                @TempData["Minimum"]
                            </div>
                        </div>
                    }
                    <label class="link"><a asp-controller="Users" asp-action="UserLogin" class="link">Já sou cadastrado</a></label>
                    <div class="alinhar">
                        <div class="top">
                            <div class="alinhar">
                                <input asp-for=Captcha name="captcha" type="checkbox" id="termos" class="check">
                                <label for="captcha"><a class="link" asp-controller="Users" asp-action="Termos">Aceito os termos de uso</a></label>
                            </div>
                            @if (TempData["NullTerms"] != null)
                                {
                                    <div class="d-flex">
                                        <div>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                 class="bi bi-exclamation-diamond-fill alert-color alert-message" viewBox="0 0 16 16">
                                                <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                                            </svg>
                                        </div>

                                        <div class="alert-color">
                                            @TempData["NullTerms"]
                                        </div>
                                    </div>
                                }
                        </div>
                    </div>
                </div>
                <div class="textfield">             
                    
                </div>
                <input type="submit" value="Cadastrar" class="btn-login">
            </div>
        </div>
    </div>
</form>

